<Window x:Class="Proyecro_DEIN_Fran.JuegoPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecro_DEIN_Fran"
        mc:Ignorable="d"
        Title="JuegoPrincipal" Height="412" Width="917" WindowStyle="ToolWindow" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Left="0" Top="0" KeyDown="Grid_KeyDown" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF2D2D2D">
        <!-- Para mantener el tamaño de la ventana -->
        <Grid Width="917" Margin="0,155,0,10">
            <TextBlock Margin="830,204,0,0" HorizontalAlignment="Left" Width="87" Height="27" VerticalAlignment="Top"></TextBlock>
        </Grid>
        <Label Content="Gameplay" HorizontalAlignment="Left" Margin="348,91,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Bradley Hand ITC" FontSize="40" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-31.581"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="Pulsa ESC para abrir el inventario..." HorizontalAlignment="Center" Margin="0,241,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Bradley Hand ITC" FontSize="16" RenderTransformOrigin="0.5,0.5">

        </Label>

        <Grid x:Name="MenuJuego" Background="#C12D2D2D" Visibility="Collapsed">
            <Grid Cursor="Hand" MouseLeftButtonDown="CerrarSesion_MouseLeftButtonDown" KeyDown="Grid_KeyDown" Focusable="True" HorizontalAlignment="Left" Width="151" Height="43" VerticalAlignment="Top" Margin="766,0,0,0">
                <Rectangle HorizontalAlignment="Center" Height="43" VerticalAlignment="Center" Width="148" RadiusX="4" RadiusY="4" Cursor="Hand"/>
                <Border BorderBrush="#FF693D24" BorderThickness="4" HorizontalAlignment="Center" Height="43" VerticalAlignment="Top" Width="148" CornerRadius="4" IsEnabled="False">
                    <Border.Background>
                        <ImageBrush ImageSource="/14250051-old-brown-leather-book-texture-closeup-photo.jpg" Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>
                <Label Content="Cerrar Sesión" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Bradley Hand ITC" FontSize="20" FontWeight="Bold" Foreground="White" Width="132" Height="33"/>
            </Grid>
            <Grid x:Name="BotonReturn" MouseLeftButtonDown="BotonReturn_MouseLeftButtonDown" Cursor="Hand">
                <Path StrokeThickness="1" Width="100" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Path.Fill>
                        <ImageBrush ImageSource="/14250051-old-brown-leather-book-texture-closeup-photo.jpg"/>
                    </Path.Fill>
                    <Path.Data>
                        <PathGeometry Figures="M0,0 L100,0 L100,70 L70,100 L0,100 Z"/>
                    </Path.Data>
                </Path>
                <Path Width="80" Height="80" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0">
                    <Path.Fill>
                        <ImageBrush ImageSource="/fondo boton return.png" Stretch="Uniform"/>
                    </Path.Fill>
                    <Path.Data>
                        <PathGeometry Figures="M0,0 L80,0 L80,60 L60,80 L0,80 Z"/>
                    </Path.Data>
                </Path>
                <Grid>
                    <!-- Capa superior: solo esquinas superiores recortadas -->
                    <Path HorizontalAlignment="Center" VerticalAlignment="Top" Height="164" Width="917" Stretch="Fill" Margin="0,232,0,0">
                        <Path.Fill>
                            <ImageBrush ImageSource="/fondos-de-textura-de-papel-antiguo-ucwuigpb57cktvxm.jpg" Stretch="UniformToFill"/>
                        </Path.Fill>
                        <Path.Data>
                            <!-- Ancho = 353, Alto = 374. Recortamos 10px en esquinas superiores -->
                            <PathGeometry Figures="M10,0 L343,0 L353,10 L353,374 L0,374 L0,10 Z"/>
                        </Path.Data>
                    </Path>

                    <!-- Capa inferior: rectángulo normal (sin recortes) -->
                    <Path HorizontalAlignment="Center" VerticalAlignment="Top" Height="181" Width="917" Stretch="Fill" Panel.ZIndex="-1" Margin="0,215,0,0">
                        <Path.Fill>
                            <ImageBrush ImageSource="/14250051-old-brown-leather-book-texture-closeup-photo.jpg" Stretch="UniformToFill"/>
                        </Path.Fill>
                        <Path.Data>
                            <!-- Rectángulo completo -->
                            <PathGeometry Figures="M0,0 L369,0 L369,385 L0,385 Z"/>
                        </Path.Data>
                    </Path>
                </Grid>
            </Grid>

        </Grid>




    </Grid>
</Window>
