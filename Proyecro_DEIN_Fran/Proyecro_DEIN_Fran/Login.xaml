<Window x:Class="Proyecro_DEIN_Fran.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecro_DEIN_Fran"
        mc:Ignorable="d"
        Title="Login"  Height="412" Width="917" WindowStyle="ToolWindow" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Left="0" Top="0" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF2D2D2D">
        <Grid>
            <!-- Capa superior -->
            <Path HorizontalAlignment="Center" VerticalAlignment="Center" Height="374" Width="353" Stretch="Fill">
                <Path.Fill>
                    <ImageBrush ImageSource="/fondos-de-textura-de-papel-antiguo-ucwuigpb57cktvxm.jpg" Stretch="UniformToFill"/>
                </Path.Fill>
                <Path.Data>
                    <PathGeometry Figures="M763.23,1.58 L905.77,1.58 L917,31.55 L917,358.16 L905.77,395.58 L763.23,395.58 L752.98,358.16 L752.98,31.55 Z"/>
                </Path.Data>
            </Path>

            <!-- Capa inferior -->
            <Path HorizontalAlignment="Center" VerticalAlignment="Center" Height="385" Width="369" Stretch="Fill" Panel.ZIndex='-1'>
                <Path.Fill>
                    <ImageBrush ImageSource="/14250051-old-brown-leather-book-texture-closeup-photo.jpg" Stretch="UniformToFill"/>
                </Path.Fill>
                <Path.Data>
                    <PathGeometry Figures="M763.23,1.58 L905.77,1.58 L917,31.55 L917,358.16 L905.77,395.58 L763.23,395.58 L752.98,358.16 L752.98,31.55 Z"/>
                </Path.Data>
            </Path>
            <Label Content="Iniciar Sesión" HorizontalAlignment="Center" Margin="0,44,0,0" VerticalAlignment="Top" FontFamily="Bradley Hand ITC" FontSize="40" FontWeight="Bold" Foreground="#FF673A1E"/>
            <PasswordBox x:Name="password"  HorizontalAlignment="Center" Height="25" Margin="0,226,0,0" VerticalAlignment="Top" Width="173" SelectionBrush="#FFDFD1AC" TabIndex="2"/>
            <TextBox x:Name="user" HorizontalAlignment="Center" Height="25" Margin="0,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171" SelectionBrush="#FFDFD1AC" TabIndex="1"/>
            <Label Content="USUARIO" HorizontalAlignment="Center" Margin="0,98,0,0" VerticalAlignment="Top" FontFamily="Bradley Hand ITC" FontSize="20" FontWeight="Bold" Foreground="#FFC26B58"/>
            <Label Content="CONTRASEÑA" HorizontalAlignment="Center" Margin="0,186,0,0" VerticalAlignment="Top" FontFamily="Bradley Hand ITC" FontSize="20" FontWeight="Bold" Foreground="#FFBE644E"/>
            <Grid Cursor="Hand" MouseLeftButtonDown="IniSesion_MouseLeftButtonDown" KeyDown="Grid_KeyDown" Focusable="True" HorizontalAlignment="Center" Width="151" Height="43" VerticalAlignment="Top" Margin="0,286,0,0">
                <Rectangle HorizontalAlignment="Center" Height="43" VerticalAlignment="Center" Width="148" RadiusX="4" RadiusY="4" Cursor="Hand"/>
                <Border BorderBrush="#FF693D24" BorderThickness="4" HorizontalAlignment="Center" Height="43" VerticalAlignment="Top" Width="148" CornerRadius="4" IsEnabled="False">
                    <Border.Background>
                        <ImageBrush ImageSource="/14250051-old-brown-leather-book-texture-closeup-photo.jpg" Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>
                <Label Content="Iniciar Sesión" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Bradley Hand ITC" FontSize="20" FontWeight="Bold" Foreground="White" Width="138" Height="33" Margin="0,5,0,0"/>
            </Grid>
            <TextBlock HorizontalAlignment="Center" Height="11" Margin="0,385,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="917" IsEnabled="False"/>
            <Grid Margin="402,334,403,26" MouseLeftButtonDown="Registro_MouseLeftButtonDown">
                <Label Content="Registrarse" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontFamily="Bradley Hand ITC" FontSize="20" FontWeight="Bold">
                    <Label.Background>
                        <ImageBrush ImageSource="/fondos-de-textura-de-papel-antiguo-ucwuigpb57cktvxm.jpg"/>
                    </Label.Background>
                </Label>
                <Border BorderBrush="#FF693D24" BorderThickness="1" HorizontalAlignment="Center" Height="35" VerticalAlignment="Top" Width="111"/>
            </Grid>
        </Grid>
        <Grid x:Name="BotonReturn" Margin="0,0,348,296" Height="100" MouseLeftButtonDown="BotonReturn_MouseLeftButtonDown" Cursor="Hand">
            <Path StrokeThickness="1" Width="100" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" Cursor="Hand">
                <Path.Fill>
                    <ImageBrush ImageSource="/14250051-old-brown-leather-book-texture-closeup-photo.jpg"/>
                </Path.Fill>
                <Path.Data>
                    <PathGeometry Figures="M0,0 L100,0 L100,70 L70,100 L0,100 Z"/>
                </Path.Data>
            </Path>
            <Path Width="80" Height="80" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0">
                <Path.Fill>
                    <ImageBrush ImageSource="/fondo boton return.png" Stretch="Uniform"/>
                </Path.Fill>
                <Path.Data>
                    <PathGeometry Figures="M0,0 L80,0 L80,60 L60,80 L0,80 Z"/>
                </Path.Data>
            </Path>
        </Grid>
    </Grid>
</Window>
