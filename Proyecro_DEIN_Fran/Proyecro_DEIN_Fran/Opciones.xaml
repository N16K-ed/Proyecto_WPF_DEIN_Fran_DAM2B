<Window x:Class="Proyecro_DEIN_Fran.Opciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecro_DEIN_Fran"
        mc:Ignorable="d"
        Title="MainWindow" Height="412" Width="917" WindowStyle="ToolWindow" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Left="0" Top="0" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="67*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/14250051-old-brown-leather-book-texture-closeup-photo.jpg" TileMode="None" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid x:Name="BotonReturn" Margin="0,0,348,296" Height="100" MouseLeftButtonDown="BotonReturn_MouseLeftButtonDown" Cursor="Hand">
            <Path StrokeThickness="1" Width="100" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Path.Fill>
                    <ImageBrush ImageSource="/14250051-old-brown-leather-book-texture-closeup-photo.jpg"/>
                </Path.Fill>
                <Path.Data>
                    <PathGeometry Figures="M0,0 L100,0 L100,70 L70,100 L0,100 Z"/>
                </Path.Data>
            </Path>
            <Path Width="80" Height="80" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0">
                <Path.Fill>
                    <ImageBrush ImageSource="/fondo boton return.png" Stretch="Uniform"/>
                </Path.Fill>
                <Path.Data>
                    <PathGeometry Figures="M0,0 L80,0 L80,60 L60,80 L0,80 Z"/>
                </Path.Data>
            </Path>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="322" Margin="105,74,0,0"
      VerticalAlignment="Top" Width="743" Grid.ColumnSpan="2">

            <!-- Marco con textura de papel -->
            <Border BorderThickness="4,4,4,4.5" BorderBrush="#FF9E8A72" Padding="5,0,0,0">
                <Border.Background>
                    <ImageBrush ImageSource="/FONDO MENÚ.png"/>
                </Border.Background>

                <!-- Scroll para mostrar más opciones -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="69.5,10,69.5,8" BorderBrush="#FFA39079" Padding="10,0,0,0" Width="595" Height="300" BorderThickness="3,3,3,3">
                    <ScrollViewer.Background>
                        <ImageBrush ImageSource="/MENU2.png"/>
                    </ScrollViewer.Background>

                    <!-- Contenedor principal -->
                    <StackPanel Width="704">

                        <!-- Título principal -->
                        <TextBlock Text="OPCIONES X"
                           FontFamily="Bradley Hand ITC"
                           FontSize="20"
                           Foreground="#802B1D"
                           FontWeight="Bold"
                           Margin="0,10,0,10" Width="652"/>
                        <Border BorderThickness="3,3,3,3" BorderBrush="#FFBBB1A6" Padding="10" Width="521" CornerRadius="2,2,2,2" Height="96" Margin="25,0,0,10" HorizontalAlignment="Left">
                            <Border.Background>
                                <ImageBrush ImageSource="/MENU2.png"/>
                            </Border.Background>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="OPCIÓN A"
                                        FontWeight="Bold"
                                        FontFamily="Bradley Hand ITC"
                                        Margin="0,5,0,5" Width="140"/>
                                    <ComboBox Width="96" SelectedIndex="0" Margin="0,0,0,10" FontFamily="Bradley Hand ITC" FontWeight="Bold" SelectionChanged="ComboBox_SelectionChanged" BorderThickness="2,2,2,2" Background="#FF91765C" BorderBrush="#FF91765C">
                                        <ComboBoxItem Content="Opción A"/>
                                        <ComboBoxItem Content="Opción B"/>
                                        <ComboBoxItem Content="Opción C"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="OPCIÓN B"
                                        FontWeight="Bold"
                                        FontFamily="Bradley Hand ITC"
                                        Margin="0,10,0,5" Width="139"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <RadioButton Content="A" Margin="0,0,10,0" FontFamily="Bradley Hand ITC" FontWeight="Bold" BorderBrush="#FF91765C">
                                            <RadioButton.Background>
                                                <ImageBrush ImageSource="/MENU2.png"/>
                                            </RadioButton.Background>
                                        </RadioButton>
                                        <RadioButton Content="B" FontFamily="Bradley Hand ITC" FontWeight="Bold" BorderBrush="#FF91765C">
                                            <RadioButton.Background>
                                                <ImageBrush ImageSource="/MENU2.png"/>
                                            </RadioButton.Background>
                                        </RadioButton>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Grupo de opciones X -->

                        <!-- Segunda sección -->
                        <TextBlock Text="OPCIONES Y"
                           FontFamily="Bradley Hand ITC"
                           FontSize="20"
                           Foreground="#802B1D"
                           FontWeight="Bold"
                           Margin="0,0,0,10" Width="654"/>

                        <Border BorderThickness="3,3,3,3" BorderBrush="#FFBBB1A6" Padding="10" Width="521" CornerRadius="2,2,2,2" HorizontalAlignment="Left" Margin="25,0,0,0">
                            <Border.Background>
                                <ImageBrush ImageSource="/MENU2.png"/>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="OPCIÓN C"
                                   FontWeight="Bold"
                                   FontFamily="Bradley Hand ITC"
                                   Margin="0,0,0,5" Width="140"/>

                                <Border CornerRadius="10" BorderThickness="2" BorderBrush="#FF91765C" Background="#FFBBA996" Width="50" Height="20">
                                    <ToggleButton BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{x:Null}" Checked="ToggleButton_Checked"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        <Button Content="OPCIÓN 1" HorizontalAlignment="Left" Margin="105,28,0,0" VerticalAlignment="Top" Height="46" Width="121" Panel.ZIndex="-1" FontFamily="Bradley Hand ITC" Click="Button_Click" FontSize="20" FontWeight="UltraBlack" Foreground="White" BorderBrush="#FF664B48">
            <Button.Background>
                <ImageBrush ImageSource="/fondos-de-textura-de-papel-antiguo-ucwuigpb57cktvxm.jpg" Opacity="0.7"/>
            </Button.Background>
        </Button>
        <Button Content="OPCIÓN 5" HorizontalAlignment="Left" Margin="279,28,0,0" VerticalAlignment="Top" Height="46" Width="121" Panel.ZIndex="-1" FontFamily="Bradley Hand ITC" FontSize="20" Grid.Column="1" FontWeight="UltraBlack" Foreground="White" BorderBrush="#FF664B48" Click="Button_Click_4">
            <Button.Background>
                <ImageBrush ImageSource="/fondos-de-textura-de-papel-antiguo-ucwuigpb57cktvxm.jpg" Opacity="0.7"/>
            </Button.Background>
        </Button>
        <Button Content="OPCIÓN 3" HorizontalAlignment="Left" Margin="416,28,0,0" VerticalAlignment="Top" Height="46" Width="121" Panel.ZIndex="-1" FontFamily="Bradley Hand ITC" FontSize="20" Grid.ColumnSpan="2" FontWeight="UltraBlack" Foreground="White" BorderBrush="#FF664B48" Click="Button_Click_2">
            <Button.Background>
                <ImageBrush ImageSource="/fondos-de-textura-de-papel-antiguo-ucwuigpb57cktvxm.jpg" Opacity="0.7"/>
            </Button.Background>
        </Button>
        <Button Content="OPCIÓN 2" HorizontalAlignment="Left" Margin="250,28,0,0" VerticalAlignment="Top" Height="46" Width="122" Panel.ZIndex="-1" FontFamily="Bradley Hand ITC" Click="Button_Click_1" FontSize="20" FontWeight="UltraBlack" Foreground="White" BorderBrush="#FF664B48">
            <Button.Background>
                <ImageBrush ImageSource="/fondos-de-textura-de-papel-antiguo-ucwuigpb57cktvxm.jpg" Opacity="0.7"/>
            </Button.Background>
        </Button>
        <Button Content="OPCIÓN 4" HorizontalAlignment="Left" Margin="124,28,0,0" VerticalAlignment="Top" Height="46" Width="122" Panel.ZIndex="-1" FontFamily="Bradley Hand ITC" FontSize="20" Grid.Column="1" FontWeight="UltraBlack" Foreground="White" BorderBrush="#FF664B48" Click="Button_Click_3">
            <Button.Background>
                <ImageBrush ImageSource="/fondos-de-textura-de-papel-antiguo-ucwuigpb57cktvxm.jpg" Opacity="0.7"/>
            </Button.Background>
        </Button>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="459,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</Window>
